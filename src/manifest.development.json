{
    "manifest_version": 2,
    "name": "Quick Pick",
    "description": "a chrome extension to boost web crawler coding",
    "version": "0.0.1",
    "options_page": "options.html",
    "devtools_page": "devtools-panel-loader.html",
    "background": {
        "scripts": ["hot-reload.js", "browser-polyfill.js", "js/background.js"]
    },
    "permissions": [
        "notifications",
        "contextMenus",
        "<all_urls>"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "css": [
            "css/content.css"
        ],
        "js": [
            "js/content.js"
        ],
        "run_at": "document_end"
    }],
    "web_accessible_resources": ["fonts/*"]
}